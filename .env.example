# ==========================================
# Playwright-Cucumber Test Framework
# Environment Configuration Template
# ==========================================

# Copy this file to .env and customize values for your environment

# ==================== APPLICATION CONFIGURATION ====================
# Base URL for the application under test
BASE_URL=https://demo.playwright.dev

# Environment identifier
APP_ENV=demo
NODE_ENV=development

# ==================== BROWSER CONFIGURATION ====================
# Browser to use for testing (chromium, firefox, webkit, edge)
BROWSER=chromium

# Run tests in headed mode (true = visible browser, false = headless)
HEADED=false

# Slow motion delay between actions (in milliseconds)
SLOW_MO=0

# Viewport dimensions
VIEWPORT_WIDTH=1280
VIEWPORT_HEIGHT=720

# ==================== TEST EXECUTION SETTINGS ====================
# Cucumber tags to run (e.g., @smoke, @regression)
TAGS=@smoke

# Number of parallel workers
PARALLEL=2

# Number of retries on failure
RETRY=1

# Test timeout in milliseconds
TIMEOUT=60000

# ==================== AUTHENTICATION ====================
# Enable automatic authentication setup
SETUP_AUTH=true

# Demo credentials (customize for your application)
AUTH_USERNAME=demo@playwright.dev
AUTH_PASSWORD=demo123

# Storage state file path
STORAGE_STATE=storage-states/authenticated.json

# Production credentials (use secure storage in CI/CD)
PROD_ADMIN_USERNAME=
PROD_ADMIN_PASSWORD=
PROD_ADMIN_EMAIL=

PROD_USER_USERNAME=
PROD_USER_PASSWORD=
PROD_USER_EMAIL=

PROD_READONLY_USERNAME=
PROD_READONLY_PASSWORD=
PROD_READONLY_EMAIL=

# ==================== RECORDING & DEBUGGING ====================
# Record videos of test execution
VIDEO=true

# Generate trace files for debugging
TRACE=true

# Take screenshots on failure
SCREENSHOT=true

# Debug mode (enables verbose logging)
DEBUG=false

# Verbose output
VERBOSE=false

# ==================== REPORTING ====================
# Automatically open reports after test run
REPORT_OPEN=false

# Report output directory
REPORT_PATH=reports/

# ==================== CI/CD CONFIGURATION ====================
# CI environment flag
CI=false

# Fail build on flaky tests
FAIL_ON_FLAKY=true

# Cleanup temporary files after test run
CLEANUP_TEMP=true

# Archive test artifacts
ARCHIVE_ARTIFACTS=false

# ==================== SERVER CONFIGURATION ====================
# Start local server before tests (if testing local development)
START_SERVER=false

# Local server URL
SERVER_URL=http://localhost:3000

# ==================== MCP INTEGRATION (FUTURE) ====================
# Enable Model Context Protocol integration
MCP_ENABLED=false

# MCP server configuration
MCP_SERVER_URL=http://localhost:3001
MCP_API_KEY=

# ==================== ADDITIONAL SETTINGS ====================
# Performance monitoring
PERFORMANCE_MONITORING=false

# Visual regression testing
VISUAL_REGRESSION=false

# Accessibility testing
A11Y_TESTING=false

# Mobile testing
MOBILE_TESTING=false

# Security scanning
SECURITY_SCANNING=false
