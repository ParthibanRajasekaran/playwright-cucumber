{
  "name": "playwright-cucumber-framework",
  "version": "1.0.0",
  "description": "Production-ready Playwright + Cucumber + TypeScript test automation framework with latest features",
  "main": "cucumber.ts",
  "type": "commonjs",
  "scripts": {
    "test": "npm run typecheck && cucumber-js --config=cucumber.config.js",
    "test:headed": "HEADED=true cucumber-js --config=cucumber.config.js",
    "test:debug": "DEBUG=true cucumber-js --config=cucumber.config.js --tags=\"@debug\" --fail-fast",
    "test:smoke": "cucumber-js --config=cucumber.config.js --tags=\"@smoke\"",
    "test:regression": "cucumber-js --config=cucumber.config.js --tags=\"@regression\"",
    "test:parallel": "cucumber-js --config=cucumber.config.js --parallel 3",
    "test:ci": "CI=true cucumber-js --config=cucumber.config.js --format json:test-results/cucumber-report.json",
    "test:mcp": "MCP_ENABLED=true npm run test",
    "report": "node scripts/generate-report.js",
    "report:serve": "npx http-server reports -p 8080 -o",
    "clean": "rimraf test-results reports .nyc_output coverage playwright-report",
    "typecheck": "tsc --noEmit",
    "type-check": "tsc -p tsconfig.json --noEmit",
    "pretest": "npm run clean && npm run install:browsers",
    "posttest": "npm run report",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.ts\" \"features/**/*.ts\" \"*.ts\"",
    "install:browsers": "npx playwright install --with-deps",
    "install:ci": "npx playwright install-deps",
    "serve:traces": "npx playwright show-trace test-results/traces/",
    "init:git": "git init && git remote add origin https://github.com/ParthibanRajasekaran/playwright-cucumber.git",
    "setup": "npm install && npm run install:browsers && npm run init:git"
  },
  "keywords": [
    "playwright",
    "cucumber",
    "typescript",
    "test-automation",
    "bdd",
    "e2e-testing",
    "mcp",
    "ci-cd"
  ],
  "author": "Parthiban Rajasekaran",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ParthibanRajasekaran/playwright-cucumber.git"
  },
  "bugs": {
    "url": "https://github.com/ParthibanRajasekaran/playwright-cucumber/issues"
  },
  "homepage": "https://github.com/ParthibanRajasekaran/playwright-cucumber#readme",
  "devDependencies": {
    "@cucumber/cucumber": "^10.8.0",
    "@cucumber/pretty-formatter": "^1.0.1",
    "@playwright/test": "^1.44.0",
    "@types/node": "^20.14.8",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "http-server": "^14.1.1",
    "multiple-cucumber-html-reporter": "^3.7.0",
    "prettier": "^3.3.2",
    "rimraf": "^5.0.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "playwright": "^1.44.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
